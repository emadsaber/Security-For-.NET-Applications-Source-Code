@page
@model LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Input.UserName" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.UserName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Input.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Input.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                
            </div>
        </div>
    </form>
</div>
