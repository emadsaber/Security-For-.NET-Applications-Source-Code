	"item": [
		{
			"name": "Get Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var accessToken = jsonData.access_token;\r",
							"\r",
							"    pm.collectionVariables.set(\"ACCESS_TOKEN\", accessToken);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "service-worker",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "388D45FA-B36B-4988-BA59-B187D329C207",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{AUTH_API_URL}}/connect/token",
					"host": [
						"{{AUTH_API_URL}}"
					],
					"path": [
						"connect",
						"token"
					]
				}
			},
			"response": []
		},
		{
